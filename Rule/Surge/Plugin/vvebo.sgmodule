[Script]
# 修复时间线
vvebo = type=http-request,pattern=^https?:\/\/api\.weibo\.cn\/2\/remind\/unread_count\?,requires-body=0,max-size=0,script-path=https://raw.githubusercontent.com/zirawell/R-Store/main/Res/Scripts/Plugins/VVebo_Repair.js
vvebo = type=http-request,pattern=^https?:\/\/api\.weibo\.cn\/2\/statuses\/user_timeline\?,requires-body=0,max-size=0,script-path=https://raw.githubusercontent.com/zirawell/R-Store/main/Res/Scripts/Plugins/VVebo_Repair.js
vvebo = type=http-response,pattern=^https?:\/\/api\.weibo\.cn\/2\/profile\/statuses\/tab\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/zirawell/R-Store/main/Res/Scripts/Plugins/VVebo_Repair.js
# 修复我的页面
vvebo = type=http-response,pattern=^https?:\/\/api\.weibo\.cn\/2\/cardlist\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/zirawell/R-Store/main/Res/Scripts/Plugins/VVebo_Repair.js

[MITM]
hostname= %APPEND% api.weibo.cn